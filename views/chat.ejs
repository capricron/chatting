<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <div>
        <div class="container w-25 mt-4" style="height:auto" id="loginContainer">
            <h3 class="text-center"><%= title %></h3>
            <form id="login" action="">
                <input type="submit" value="Join Now" class="btn btn-danger w-100" id="loginButton">
            </form>
        </div>

        <div class="container w-25 mt-4" style="height:auto" id="chatContainer">
            <h3 class="text-center">Diskusi Terbuka</h3>
            <form id="chatForm" action="">
                <div id="messageList" style="height: 500px;" class="border"></div>
                <input type="text" class="w-100 form-control mt-2 overflow-scroll" id="message">
                <input type="submit" value="Kirim Pesan" class="mt-2 btn btn-danger w-100" id="sendMessage">
            </form>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="javascripts/script.js"></script>
    </body>
</html>